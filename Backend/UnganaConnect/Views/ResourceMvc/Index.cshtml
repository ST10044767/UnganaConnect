@model IEnumerable<UnganaConnect.Models.Resources_Repo.CResource>

@{
    ViewData["Title"] = "Resource Library";
}

<h1>Resource Library</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>File</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Title</td>
        <td>@item.Category</td>
        <td><a href="@item.FileUrl" target="_blank">View/Download</a></td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
        </td>
    </tr>
}
    </tbody>
</table>

@if (User.IsInRole("Staff") || User.IsInRole("Admin"))
{
    <a asp-action="Upload" class="btn btn-primary">Upload New Resource</a>
}

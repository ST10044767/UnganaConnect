@{
    ViewData["Title"] = "Impact Overview";
}

<h1>Impact Dashboard Overview</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Courses</h5>
                <p class="card-text">@ViewBag.TotalCourses</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Enrollments</h5>
                <p class="card-text">@ViewBag.TotalEnrollments</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Resources</h5>
                <p class="card-text">@ViewBag.TotalResources</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Consultancy Requests</h5>
                <p class="card-text">@ViewBag.TotalConsultancyRequests</p>
            </div>
        </div>
    </div>
</div>

<!-- Placeholder for chart -->
<div class="mt-4">
    <h3>Usage Chart</h3>
    <canvas id="usageChart" width="400" height="200"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('usageChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Users', 'Courses', 'Enrollments', 'Resources', 'Requests'],
                datasets: [{
                    label: 'Count',
                    data: [@ViewBag.TotalUsers, @ViewBag.TotalCourses, @ViewBag.TotalEnrollments, @ViewBag.TotalResources, @ViewBag.TotalConsultancyRequests],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}

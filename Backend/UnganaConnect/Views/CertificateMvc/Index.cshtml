@model IEnumerable<UnganaConnect.Models.Training___Learning.Certificate>

@{
    ViewData["Title"] = "Certificates";
}

<h1>Certificates</h1>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Course ID</th>
            <th>Issued On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var certificate in Model)
        {
            <tr>
                <td>@certificate.UserId</td>
                <td>@certificate.CourseId</td>
                <td>@certificate.IssuedOn.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@certificate.Id" class="btn btn-primary btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

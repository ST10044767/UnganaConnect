@model UnganaConnect.Models.Training___Learning.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>@Model.Title</h1>

<div>
    <h4>Course Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
    </dl>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="mt-3">
        <a asp-controller="EnrollmentMvc" asp-action="Create" asp-route-courseId="@Model.Id" class="btn btn-primary">Enroll in this Course</a>
    </div>
}

@if (Model.Modules != null && Model.Modules.Any())
{
    <div class="mt-4">
        <h4>Course Modules</h4>
        <ul class="list-group">
            @foreach (var module in Model.Modules)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @module.Title
                    <a asp-action="CoursePlayer" asp-route-id="@module.Id" class="btn btn-sm btn-outline-primary">View Module</a>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="mt-4">
        <p>No modules available for this course yet.</p>
    </div>
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> |
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

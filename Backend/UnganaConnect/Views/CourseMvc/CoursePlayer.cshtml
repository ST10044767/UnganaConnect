@model UnganaConnect.Models.Training___Learning.Module

@{
    ViewData["Title"] = "Course Player - " + Model.Title;
}

<h1>@Model.Title</h1>

@if (Model.Course != null)
{
    <p><strong>Course:</strong> @Model.Course.Title</p>
}

<div class="mt-3">
    @if (!string.IsNullOrEmpty(Model.VideoUrl))
    {
        <h4>Video Content</h4>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.FileUrl))
    {
        <h4>Additional Resources</h4>
        <p><a href="@Model.FileUrl" target="_blank" class="btn btn-primary">Download/View File</a></p>
    }

    @if (!string.IsNullOrEmpty(Model.Content))
    {
        <h4>Module Content</h4>
        <div class="content">
            @Html.Raw(Model.Content)
        </div>
    }
</div>

@* Removed Quiz related code since Module does not have Quiz property *@

<div class="mt-3">
    <a asp-controller="CourseMvc" asp-action="Details" asp-route-id="@Model.CourseId" class="btn btn-secondary">Back to Course</a>
</div>

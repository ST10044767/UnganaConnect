@model IEnumerable<UnganaConnect.Models.Forum.ForumThread>

@{
    ViewData["Title"] = "Moderator Dashboard";
}

<h1>Forum Moderator Dashboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Replies</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var thread in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => thread.Title)</td>
            <td>@thread.User.FirstName @thread.User.LastName</td>
            <td>@thread.Replies.Count()</td>
            <td>@thread.CreatedAt.ToString("g")</td>
            <td>
                <a asp-action="Thread" asp-route-id="@thread.Id" class="btn btn-sm btn-info">View</a>
                <form asp-action="DeleteThread" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@thread.Id" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this thread?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Home" class="btn btn-secondary">Back to Forum</a>

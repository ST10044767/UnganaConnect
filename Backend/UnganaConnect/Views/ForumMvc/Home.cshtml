@model IEnumerable<UnganaConnect.Models.Forum.ForumThread>

@{
    ViewData["Title"] = "Forum Home";
}

<h1>Community Forum</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="CreateThread" class="btn btn-primary">Create New Thread</a>
    }
    else
    {
        <a href="/Auth/Login">Login to create a thread</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Replies</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var thread in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => thread.Title)</td>
            <td>@thread.User.FirstName @thread.User.LastName</td>
            <td>@thread.Replies.Count()</td>
            <td>@thread.CreatedAt.ToString("g")</td>
            <td><a asp-action="Thread" asp-route-id="@thread.Id" class="btn btn-sm btn-info">View</a></td>
        </tr>
    }
    </tbody>
</table>

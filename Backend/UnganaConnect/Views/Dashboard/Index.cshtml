@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <h2 class="mb-3">Dashboard</h2>

    <h4 class="mt-4">Courses</h4>
    <div class="row">
        @foreach (var course in (IEnumerable<UnganaConnect.Models.Training___Learning.Course>)ViewBag.Courses)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <h4 class="mt-4">Events</h4>
    <ul>
        @foreach (var ev in (IEnumerable<UnganaConnect.Models.Event_Management.Event>)ViewBag.Events)
        {
            <li>@ev.Title - @ev.StartDate.ToShortDateString()</li>
        }
    </ul>
</div>


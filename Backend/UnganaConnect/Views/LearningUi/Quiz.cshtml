@model UnganaConnect.Models.Training___Learning.Quiz
@{
    ViewData["Title"] = "Quiz";
}

<div class="container py-4">
    <h2>@Model.Title</h2>
    <form asp-action="SubmitQuiz" method="post">
        <input type="hidden" name="QuizId" value="@Model.Id" />
        @foreach (var q in Model.Questions)
        {
            <div class="mb-3">
                <strong>@q.Text</strong>
                @foreach (var opt in q.Options)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.Id]" value="@opt.Id" />
                        <label class="form-check-label">@opt.Text</label>
                    </div>
                }
            </div>
        }
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>


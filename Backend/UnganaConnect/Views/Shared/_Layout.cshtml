<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnganaConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">UnganaConnect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="trainingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Training & Learning
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="trainingDropdown">
                                <li><a class="dropdown-item" href="/CourseMvc/Catalog">Course Catalog</a></li>
                                <li><a class="dropdown-item" href="/EnrollmentMvc/MyLearning">My Learning</a></li>
                                <li><a class="dropdown-item" href="/QuizMvc/Assessment">Assessments</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="authDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="authDropdown">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" href="/Auth/Profile">Profile</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="/Auth/AdminDashboard">Admin Dashboard</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><form method="post" action="/Auth/Logout"><button type="submit" class="dropdown-item">Logout</button></form></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/Auth/Login">Login</a></li>
                                    <li><a class="dropdown-item" href="/Auth/Register">Register</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/swagger">API Docs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - UnganaConnect - <a href="/swagger">Swagger</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

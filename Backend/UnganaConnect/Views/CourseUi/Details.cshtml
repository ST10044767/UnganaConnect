@model UnganaConnect.Models.Training___Learning.Course
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>

    <h4>Modules</h4>
    <ul>
        @foreach (var module in Model.Modules)
        {
            <li>@module.Title</li>
        }
    </ul>
</div>


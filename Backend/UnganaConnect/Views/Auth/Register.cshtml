@model UnganaConnect.Models.Users.User

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com">
                <label asp-for="Email" for="floatingEmail"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" id="floatingFirstName" placeholder="First Name">
                <label asp-for="FirstName" for="floatingFirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" id="floatingLastName" placeholder="Last Name">
                <label asp-for="LastName" for="floatingLastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PasswordHash" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label asp-for="PasswordHash" for="floatingPassword"></label>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Role" class="form-select" id="floatingRole">
                    <option value="Member">Member</option>
                    <option value="Admin">Admin</option>
                </select>
                <label asp-for="Role" for="floatingRole"></label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
            <div class="my-2">
                <div class="d-flex flex-row align-items-center justify-content-center">
                    <a href="/Auth/Login" class="text-body-small">Already have an account? Login</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

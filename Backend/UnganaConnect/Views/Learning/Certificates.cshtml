@model IEnumerable<UnganaConnect.Models.Training___Learning.Certificate>
@{
    ViewData["Title"] = "Certificates";
}

<div class="container py-4">
    <h2>My Certificates</h2>
    <ul>
        @foreach (var c in Model)
        {
            <li>@(c.Course?.Title ?? "Course") - @c.IssuedOn.ToShortDateString()</li>
        }
    </ul>
</div>


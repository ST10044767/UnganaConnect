@model IEnumerable<UnganaConnect.Models.Training___Learning.Quiz>

@{
    ViewData["Title"] = "Assessments";
}

<h1>Assessments</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Quiz Title
            </th>
            <th>
                Module
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Title)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Take Assessment</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<UnganaConnect.Models.Training___Learning.Enrollment>

@{
    ViewData["Title"] = "My Learning";
}

<h1>My Learning</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                Enrolled On
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrolledOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model UnganaConnect.UI.Models.Course
@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Create New Course
                    </h3>
                    <p class="text-white-50 mb-0">Add a new course to the UnganaConnect platform</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-heading me-1"></i>Course Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter course title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">
                                <i class="fas fa-tag me-1"></i>Category
                            </label>
                            <select asp-for="Category" class="form-select" required>
                                <option value="">Select a category</option>
                                <option value="Digital Skills">Digital Skills</option>
                                <option value="Data Management">Data Management</option>
                                <option value="Communication">Communication</option>
                                <option value="Project Management">Project Management</option>
                                <option value="Leadership">Leadership</option>
                                <option value="Technology">Technology</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" 
                                      placeholder="Enter course description" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Course")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Courses
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ConsultancyRequestViewModel
@{
    ViewData["Title"] = "Request Details";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Consultancy</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h3 class="mb-1">@Model.Title</h3>
                            <p class="text-muted mb-0">@Model.Area</p>
                        </div>
                        <div class="text-end">
                            <span class="badge @GetStatusBadgeClass(Model.Status) mb-2">@Model.Status</span>
                            <br>
                            <span class="badge @GetPriorityBadgeClass(Model.Priority)">@Model.Priority Priority</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Consultant</h6>
                            <p class="text-muted">@Model.Consultant</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Timeline</h6>
                            <p class="text-muted mb-1">Submitted: @Model.Submitted.ToString("MMM dd, yyyy")</p>
                            <p class="text-muted">Deadline: @Model.Deadline.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h6>Description</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-comments me-2"></i>Message
                        </button>
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-file-text me-2"></i>Documents
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">Request Status</h6>
                </div>
                <div class="card-body">
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar @GetProgressBarClass(Model.Status)" 
                             style="width: @GetProgressPercentage(Model.Status)%"></div>
                    </div>
                    <small class="text-muted">Current Status: @Model.Status</small>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "In Progress" => "bg-primary",
            "Pending Review" => "bg-warning",
            _ => "bg-secondary"
        };
    }
    
    string GetPriorityBadgeClass(string priority)
    {
        return priority switch
        {
            "High" => "bg-danger",
            "Medium" => "bg-warning",
            "Low" => "bg-success",
            _ => "bg-secondary"
        };
    }
    
    string GetProgressBarClass(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "In Progress" => "bg-primary",
            "Pending Review" => "bg-warning",
            _ => "bg-secondary"
        };
    }
    
    int GetProgressPercentage(string status)
    {
        return status switch
        {
            "Completed" => 100,
            "In Progress" => 60,
            "Pending Review" => 30,
            _ => 10
        };
    }
}
@model ForumIndexViewModel
@{
    ViewData["Title"] = "Community Forum";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">Community Forum</h1>
            <p class="text-muted">Connect, collaborate, and share knowledge with CSOs across Africa</p>
        </div>
    </div>

    <ul class="nav nav-tabs mb-4" id="forumTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="categories-tab" data-bs-toggle="tab" data-bs-target="#categories" type="button" role="tab">Categories</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="recent-tab" data-bs-toggle="tab" data-bs-target="#recent" type="button" role="tab">Recent Discussions</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="trending-tab" data-bs-toggle="tab" data-bs-target="#trending" type="button" role="tab">Trending</button>
        </li>
    </ul>

    <div class="tab-content" id="forumTabContent">
        <!-- Categories Tab -->
        <div class="tab-pane fade show active" id="categories" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Forum Categories</h3>
                <a href="@Url.Action("CreateTopic")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Topic
                </a>
            </div>
            
            <div class="row">
                @foreach (var category in Model.Categories)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title">@category.Name</h5>
                                        <p class="card-text text-muted">@category.Description</p>
                                    </div>
                                    <span class="badge bg-primary">@category.Topics topics</span>
                                </div>
                                <div class="d-flex justify-content-between text-muted small">
                                    <span><i class="fas fa-comments me-1"></i>@category.Posts posts</span>
                                    <span><i class="fas fa-users me-1"></i>Active community</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Recent Discussions Tab -->
        <div class="tab-pane fade" id="recent" role="tabpanel">
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Search discussions...">
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-outline-secondary me-2">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <a href="@Url.Action("CreateTopic")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>New Topic
                    </a>
                </div>
            </div>

            @foreach (var topic in Model.RecentTopics)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="flex-grow-1">
                                <div class="mb-2">
                                    @if (topic.IsPinned)
                                    {
                                        <i class="fas fa-thumbtack text-warning me-2"></i>
                                    }
                                    <span class="badge bg-secondary me-2">@topic.Category</span>
                                    @if (topic.IsAnswered)
                                    {
                                        <span class="badge bg-success">Answered</span>
                                    }
                                </div>
                                
                                <h5 class="card-title">@topic.Title</h5>
                                <p class="card-text text-muted">@topic.Excerpt</p>
                                
                                <div class="mb-3">
                                    @foreach (var tag in topic.Tags)
                                    {
                                        <span class="badge bg-light text-dark me-1">#@tag</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="text-end ms-3">
                                <div class="text-muted small">
                                    <div><i class="fas fa-comments me-1"></i>@topic.Replies</div>
                                    <div><i class="fas fa-eye me-1"></i>@topic.Views</div>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                    @string.Join("", topic.Author.Split(' ').Select(n => n.FirstOrDefault()))
                                </div>
                                <div>
                                    <strong>@topic.Author</strong>
                                    <span class="text-muted"> • @topic.AuthorRole</span>
                                    <div class="small text-muted">@topic.CreatedAt</div>
                                </div>
                            </div>
                            
                            <div class="text-muted small">
                                Last activity by <strong>@topic.LastActivityBy</strong> @topic.LastActivity
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Trending Tab -->
        <div class="tab-pane fade" id="trending" role="tabpanel">
            <div class="row">
                <div class="col-lg-8">
                    <h3 class="mb-3">Trending Topics</h3>
                    <p class="text-muted mb-4">Most discussed topics this week</p>
                    
                    @for (int i = 0; i < Model.TrendingTopics.Count; i++)
                    {
                        var topic = Model.TrendingTopics[i];
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            @(i + 1)
                                        </div>
                                        <div>
                                            <h5 class="mb-0">#@topic.Tag</h5>
                                            <small class="text-muted">@topic.Posts posts this week</small>
                                        </div>
                                    </div>
                                    <i class="fas fa-trending-up text-success"></i>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="col-lg-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">Top Contributors</h5>
                            <small class="text-muted">Most active community members</small>
                        </div>
                        <div class="card-body">
                            @foreach (var contributor in Model.TopContributors)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                            @string.Join("", contributor.Name.Split(' ').Select(n => n.FirstOrDefault()))
                                        </div>
                                        <div>
                                            <div class="fw-bold">@contributor.Name</div>
                                            <small class="text-muted">@contributor.Posts posts</small>
                                        </div>
                                    </div>
                                    <span class="badge bg-secondary">@contributor.Reputation</span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">Forum Guidelines</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-1">• Be respectful and professional</li>
                                <li class="mb-1">• Share knowledge and experiences</li>
                                <li class="mb-1">• Use appropriate categories</li>
                                <li class="mb-1">• Search before posting</li>
                                <li class="mb-1">• Provide context and details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>